<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Datui Documentation</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <script>
        // Set theme immediately to prevent flash
        (function() {
            const html = document.documentElement;
            const stored = localStorage.getItem('datui-theme');
            if (stored === 'dark' || stored === 'light') {
                html.setAttribute('data-theme', stored);
            } else {
                // Use system preference
                const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
                html.setAttribute('data-theme', prefersDark ? 'dark' : 'light');
            }
        })();
    </script>
    <style>
        :root {
            --font-mono: 'JetBrains Mono', ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, monospace;
            color-scheme: light dark;
        }

        /* Default light theme */
        :root {
            --bg-color: #ffffff;
            --text-color: #151515;
            --border-color: #e0e0e0;
            --selection-bg: #f0f0f0;
        }

        /* Dark theme via data-theme attribute */
        :root[data-theme="dark"] {
            --bg-color: #151515;
            --text-color: #e0e0e0;
            --border-color: #404040;
            --selection-bg: #2a2a2a;
        }

        /* System preference fallback */
        @media (prefers-color-scheme: dark) {
            :root:not([data-theme]) {
                --bg-color: #151515;
                --text-color: #e0e0e0;
                --border-color: #404040;
                --selection-bg: #2a2a2a;
            }
        }

        *, *::before, *::after {
            box-sizing: border-box;
        }

        html, body {
            overflow-x: hidden;
        }

        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            padding: 0;
            margin: 0;
            font-family: var(--font-mono);
            font-size: 1rem;
            line-height: 1.5;
            background-color: var(--bg-color);
            color: var(--text-color);
        }

        .container {
            flex: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }
        }

        .header {
            margin-bottom: 2rem;
            border-bottom: 2px solid var(--border-color);
            padding-bottom: 1rem;
            position: relative;
        }

        .header-content {
            padding-right: 260px; /* Make room for theme toggle + GitHub link */
        }

        .header-actions {
            position: absolute;
            top: 0;
            right: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        @media (max-width: 900px) {
            .header-content {
                padding-right: 0;
            }

            .header-actions {
                position: static;
                margin-top: 1rem;
            }
        }

        .github-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 0.75rem;
            text-decoration: none;
            color: var(--text-color);
            opacity: 0.7;
            transition: opacity 0.2s;
            font-family: var(--font-mono);
            font-size: 0.875rem;
            border: 1px solid var(--border-color);
            background: var(--bg-color);
            cursor: pointer;
            pointer-events: auto;
        }

        .github-link:hover,
        .github-link:focus {
            opacity: 1;
            background: var(--selection-bg);
            outline: none;
        }

        .github-link svg {
            width: 18px;
            height: 18px;
            fill: currentColor;
        }


        .header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin: 0 0 0.5rem 0;
            padding: 0;
            font-family: var(--font-mono);
            letter-spacing: 0;
            line-height: 1.2;
        }

        @media (max-width: 768px) {
            .header h1 {
                font-size: 1.8rem;
            }
        }

        .subtitle {
            color: var(--text-color);
            opacity: 0.8;
            font-size: 1rem;
            margin-bottom: 1rem;
        }

        .controls {
            display: flex;
            gap: 1rem;
            align-items: center;
            flex-wrap: wrap;
            margin-top: 1rem;
            margin-bottom: 0;
        }

        .theme-toggle {
            cursor: pointer;
            padding: 0.5rem 1rem;
            border: 1px solid var(--border-color);
            background: var(--bg-color);
            color: var(--text-color);
            font-family: var(--font-mono);
            font-size: 0.875rem;
            transition: all 0.2s;
        }

        .theme-toggle:hover {
            background: var(--selection-bg);
        }

        .keyboard-hint {
            font-size: 0.75rem;
            opacity: 0.6;
            font-family: var(--font-mono);
        }

        .keyboard-hint kbd {
            display: inline-block;
            padding: 0.15em 0.4em;
            font-family: var(--font-mono);
            font-size: 0.9em;
            line-height: 1;
            color: var(--text-color);
            background: var(--selection-bg);
            border: 1px solid var(--border-color);
            border-radius: 4px;
            box-shadow: 0 1px 0 var(--border-color);
        }

        @media (max-width: 768px) {
            .controls {
                display: none;
            }
        }

        .demo-showcase {
            margin-bottom: 2rem;
            text-align: center;
        }

        .demo-gif {
            max-width: 600px;
            width: 100%;
            height: auto;
            display: inline-block;
            border: 1px solid var(--border-color);
            border-radius: 4px;
        }

        .versions-heading {
            font-size: 1.25rem;
            font-weight: 600;
            font-family: var(--font-mono);
            margin: 0 0 1rem 0;
            color: var(--text-color);
        }

        .version-list {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
            margin-top: 0;
            font-family: var(--font-mono);
        }

        .version-card {
            border: none;
            border-left: 3px solid transparent;
            padding: 0.75rem 1rem;
            text-decoration: none;
            display: grid;
            grid-template-columns: auto 1fr;
            gap: 1rem;
            align-items: center;
            color: inherit;
            background: var(--bg-color);
            transition: all 0.15s;
            position: relative;
            font-family: var(--font-mono);
            cursor: pointer;
            font-size: 1rem;
        }

        @media (max-width: 768px) {
            .version-card {
                grid-template-columns: 1fr;
                gap: 0.25rem;
            }
        }

        .version-card:hover,
        .version-card:focus {
            background: var(--selection-bg);
            border-left-color: var(--text-color);
            outline: none;
        }

        .version-card.focused {
            background: var(--selection-bg);
            border-left-color: var(--text-color);
        }

        .version-card .version-name {
            font-weight: bold;
            font-family: var(--font-mono);
            color: var(--text-color);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .version-card .version-date {
            opacity: 0.7;
            font-size: 0.95rem;
            font-family: var(--font-mono);
            color: var(--text-color);
            text-align: right;
        }

        @media (max-width: 768px) {
            .version-card .version-date {
                text-align: left;
            }
        }

        .version-card .version-badge {
            display: inline-block;
            padding: 0.2rem 0.5rem;
            font-size: 0.75rem;
            font-weight: bold;
            font-family: var(--font-mono);
            text-transform: uppercase;
            border: 1px solid var(--border-color);
            background: var(--bg-color);
        }

        .version-card .version-badge.development {
            color: var(--text-color);
            opacity: 0.8;
        }

        .version-card .version-badge.stable {
            color: var(--text-color);
            opacity: 0.8;
        }

        .version-card {
            text-align: left;
        }

        .older-versions {
            margin-top: 1rem;
            border: 1px solid var(--border-color);
        }

        .older-versions summary {
            list-style: none;
            cursor: pointer;
            padding: 0.75rem 1rem;
            font-family: var(--font-mono);
            font-weight: 600;
            font-size: 1rem;
            color: var(--text-color);
            background: var(--bg-color);
            transition: background 0.15s;
        }

        .older-versions summary::-webkit-details-marker {
            display: none;
        }

        .older-versions summary::before {
            content: '‚ñ∂';
            display: inline-block;
            margin-right: 0.5rem;
            transition: transform 0.2s;
        }

        .older-versions[open] summary::before {
            transform: rotate(90deg);
        }

        .older-versions summary:hover,
        .older-versions summary:focus,
        .older-versions summary.focused {
            background: var(--selection-bg);
            outline: none;
        }

        .older-versions .version-list {
            margin-top: 0;
            border-top: 1px solid var(--border-color);
            padding: 0.25rem 0 0 0;
        }

        /* Smooth transitions for theme switching */
        * {
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }

        /* Focus visible for keyboard navigation */
        .version-card:focus-visible {
            outline: 2px solid var(--text-color);
            outline-offset: 2px;
        }

        /* Skip link for accessibility */
        .skip-link {
            position: absolute;
            top: -40px;
            left: 0;
            background: var(--bg-color);
            color: var(--text-color);
            padding: 8px;
            text-decoration: none;
            z-index: 100;
        }

        .skip-link:focus {
            top: 0;
        }
    </style>
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <div class="container">
        <header class="header">
            <div class="header-content">
                <h1>Datui</h1>
                <p class="subtitle">Data Exploration in the Terminal</p>
            </div>
            <div class="header-actions">
                <button class="theme-toggle" id="theme-toggle" aria-label="Toggle theme">
                    <span id="theme-icon">‚òÄÔ∏è</span> <span id="theme-text">Light</span>
                </button>
                <a href="https://github.com/derekwisong/datui"
                   class="github-link"
                   target="_blank"
                   rel="noopener noreferrer"
                   aria-label="View on GitHub">
                    <svg viewBox="0 0 16 16" aria-hidden="true">
                        <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
                    </svg>
                    <span>GitHub</span>
                </a>
            </div>
            <div class="controls">
                <span class="keyboard-hint">
                    Navigate: <kbd>j</kbd>/<kbd>k</kbd> | Select: <kbd>Enter</kbd> | Expand Older Versions: <kbd>o</kbd> | Toggle Theme: <kbd>t</kbd>
                </span>
            </div>
        </header>

        <main id="main-content">
            <div class="demo-showcase">
                {% if latest_stable_path %}
                <img src="{{ (latest_permanent_path if latest_permanent_path is defined and latest_permanent_path else latest_stable_path) }}/demos/01-basic-navigation.gif"
                     alt="Datui demo showing basic navigation"
                     class="demo-gif"
                     loading="lazy">
                {% endif %}
            </div>

            <h2 class="versions-heading">Documentation:</h2>
            <div class="version-list" role="list">
                {% for version in recent_versions %}
                <a href="{{ (latest_permanent_path if version.is_latest_stable and (latest_permanent_path is defined and latest_permanent_path) else version.path) }}/index.html"
                   class="version-card"
                   role="listitem"
                   data-version="{{ version.name }}"
                   tabindex="0">
                    <span class="version-name">
                        {{ version.name }}
                        {% if version.is_latest_stable %}
                        <span class="version-badge stable">Latest</span>
                        {% endif %}
                        {% if version.is_development %}
                        <span class="version-badge development">Development</span>
                        {% endif %}
                    </span>
                    <span class="version-date">{{ version.date_str }}</span>
                </a>
                {% endfor %}
            </div>
            {% if older_versions %}
            <details class="older-versions" id="older-versions">
                <summary tabindex="0">Older Versions</summary>
                <div class="version-list" role="list">
                    {% for version in older_versions %}
                    <a href="{{ version.path }}/index.html"
                       class="version-card"
                       role="listitem"
                       data-version="{{ version.name }}"
                       tabindex="0">
                        <span class="version-name">
                            {{ version.name }}
                            {% if version.is_development %}
                            <span class="version-badge development">Development</span>
                            {% endif %}
                        </span>
                        <span class="version-date">{{ version.date_str }}</span>
                    </a>
                    {% endfor %}
                </div>
            </details>
            {% endif %}
        </main>

    </div>

    <script>
        (function() {
            // Theme management
            const themeToggle = document.getElementById('theme-toggle');
            const themeIcon = document.getElementById('theme-icon');
            const themeText = document.getElementById('theme-text');
            const html = document.documentElement;

            // Get current theme (already set by inline script in head)
            const currentTheme = html.getAttribute('data-theme') ||
                (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            updateThemeUI(currentTheme);

            function updateThemeUI(theme) {
                // Update icon and text to show what clicking will switch TO
                if (theme === 'dark') {
                    themeIcon.textContent = '‚òÄÔ∏è';
                    themeText.textContent = 'Light';
                } else {
                    themeIcon.textContent = 'üåô';
                    themeText.textContent = 'Dark';
                }
            }

            function toggleTheme() {
                const currentTheme = html.getAttribute('data-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                html.setAttribute('data-theme', newTheme);
                localStorage.setItem('datui-theme', newTheme);
                updateThemeUI(newTheme);
            }

            themeToggle.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                toggleTheme();
            });

            // Keyboard navigation with vim keybinds
            // Navigable items: version cards (visible ones) + older-versions summary
            const allVersionCards = Array.from(document.querySelectorAll('.version-card'));
            const olderVersionsDetails = document.getElementById('older-versions');
            const olderVersionsSummary = olderVersionsDetails?.querySelector('summary');

            function getNavigableItems() {
                // Get visible version cards (not inside closed details)
                const visibleCards = allVersionCards.filter(function(card) {
                    const details = card.closest('details');
                    return !details || details.open;
                });

                // Insert the "Older Versions" summary after the recent versions (before older version cards)
                if (olderVersionsSummary) {
                    // Find where recent versions end (cards not inside details)
                    const recentCards = visibleCards.filter(function(card) {
                        return !card.closest('details');
                    });
                    const olderCards = visibleCards.filter(function(card) {
                        return card.closest('details');
                    });
                    return [...recentCards, olderVersionsSummary, ...olderCards];
                }
                return visibleCards;
            }

            let navigableItems = getNavigableItems();
            let focusedIndex = -1;

            function focusItem(index) {
                navigableItems = getNavigableItems();
                // Remove focus from all items
                navigableItems.forEach(function(item) {
                    item.classList.remove('focused');
                    item.blur();
                });
                if (index >= 0 && index < navigableItems.length) {
                    navigableItems[index].classList.add('focused');
                    navigableItems[index].focus();
                    navigableItems[index].scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                }
            }

            olderVersionsDetails?.addEventListener('toggle', function() {
                navigableItems = getNavigableItems();
                // Keep focus on summary after toggle
                const summaryIndex = navigableItems.indexOf(olderVersionsSummary);
                if (summaryIndex >= 0) {
                    focusedIndex = summaryIndex;
                } else if (focusedIndex >= navigableItems.length && navigableItems.length > 0) {
                    focusedIndex = navigableItems.length - 1;
                }
                focusItem(focusedIndex);
            });

            function handleKeydown(e) {
                // Don't interfere with typing in inputs or textareas
                if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA' || e.target.tagName === 'BUTTON') {
                    return;
                }

                switch(e.key) {
                    case 'j':
                    case 'ArrowDown':
                        e.preventDefault();
                        if (focusedIndex < 0) {
                            // Start from first item
                            focusedIndex = 0;
                        } else if (focusedIndex < navigableItems.length - 1) {
                            focusedIndex++;
                        }
                        focusItem(focusedIndex);
                        break;

                    case 'k':
                    case 'ArrowUp':
                        e.preventDefault();
                        if (focusedIndex < 0) {
                            // Start from last item
                            focusedIndex = navigableItems.length - 1;
                        } else if (focusedIndex > 0) {
                            focusedIndex--;
                        }
                        focusItem(focusedIndex);
                        break;

                    case 'Enter':
                    case ' ':
                        if (focusedIndex >= 0 && focusedIndex < navigableItems.length) {
                            e.preventDefault();
                            const item = navigableItems[focusedIndex];
                            if (item === olderVersionsSummary) {
                                // Toggle the details element
                                olderVersionsDetails.open = !olderVersionsDetails.open;
                            } else {
                                // Navigate to version
                                item.click();
                            }
                        }
                        break;

                    case 'o':
                        // Toggle older versions with 'o' key
                        if (!e.ctrlKey && !e.metaKey && !e.altKey && olderVersionsDetails) {
                            e.preventDefault();
                            olderVersionsDetails.open = !olderVersionsDetails.open;
                        }
                        break;

                    case 't':
                        if (!e.ctrlKey && !e.metaKey && !e.altKey) {
                            e.preventDefault();
                            e.stopPropagation();
                            toggleTheme();
                        }
                        break;

                    case 'Home':
                        e.preventDefault();
                        focusedIndex = 0;
                        focusItem(focusedIndex);
                        break;

                    case 'End':
                        e.preventDefault();
                        focusedIndex = navigableItems.length - 1;
                        focusItem(focusedIndex);
                        break;
                }
            }

            // Handle card focus events (for mouse/touch interaction)
            allVersionCards.forEach(function(card) {
                card.addEventListener('mouseenter', function() {
                    navigableItems = getNavigableItems();
                    const index = navigableItems.indexOf(card);
                    if (index >= 0) {
                        focusedIndex = index;
                        focusItem(index);
                    }
                });
                card.addEventListener('click', function() {
                    navigableItems = getNavigableItems();
                    focusedIndex = navigableItems.indexOf(card);
                });
            });

            // Handle older versions summary hover
            if (olderVersionsSummary) {
                olderVersionsSummary.addEventListener('mouseenter', function() {
                    navigableItems = getNavigableItems();
                    const index = navigableItems.indexOf(olderVersionsSummary);
                    if (index >= 0) {
                        focusedIndex = index;
                        focusItem(index);
                    }
                });
            }

            // Global keyboard listener
            document.addEventListener('keydown', handleKeydown);
        })();
    </script>
</body>
</html>
